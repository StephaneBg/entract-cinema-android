<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Cinema.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black_darker</item>
        <item name="colorOnPrimary">@color/gray_darker</item>

        <item name="colorSecondary">@color/red_darker</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/gray_darker</item>

        <item name="colorSurface">@color/gray_lighter</item>
        <item name="colorOnSurface">@color/gray_darker</item>

        <item name="fontFamily">@font/raleway</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Cinema.Headline5</item>

        <item name="switchStyle">@style/Widget.Cinema.Switch</item>
        <item name="materialButtonStyle">@style/Widget.Cinema.Button.Light</item>
    </style>

    <style name="Theme.Cinema.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/black_lighter</item>
        <item name="colorPrimaryDark">@color/black_lighter</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/red_lighter</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:colorBackground">@color/black_lighter</item>
        <item name="colorOnBackground">@color/gray_lighter</item>

        <item name="colorSurface">@color/black_darker</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="fontFamily">@font/raleway</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Cinema.Headline5</item>

        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="switchStyle">@style/Widget.Cinema.Switch</item>
        <item name="materialButtonStyle">@style/Widget.Cinema.Button.Dark</item>
    </style>

    <!-- TextAppearance -->
    <style name="TextAppearance.Cinema.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/patua_one</item>
    </style>

    <!-- Widget -->
    <style name="Widget.Cinema.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">16dp</item>
        <item name="rippleColor">?colorOnBackground</item>
    </style>

    <style name="Widget.Cinema.Button.Light">
        <item name="android:textColor">?colorSecondary</item>
        <item name="iconTint">?colorSecondary</item>
    </style>

    <style name="Widget.Cinema.Button.Dark">
        <item name="android:textColor">?colorOnBackground</item>
        <item name="iconTint">?colorOnBackground</item>
        <item name="strokeColor">?colorSecondary</item>
    </style>

    <style name="Widget.Cinema.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="useMaterialThemeColors">false</item>
    </style>

    <style name="Theme.Cinema.Dialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/red_darker</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/gray_darker</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/Widget.Cinema.Button.Dialog</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Widget.Cinema.Button.Dialog</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/Widget.Cinema.Button.Dialog</item>
    </style>

    <style name="Widget.Cinema.Button.Dialog" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?colorSecondary</item>
        <item name="rippleColor">?colorOnBackground</item>
    </style>
</resources>
